<?xml version="1.0" encoding="UTF-8"?>
<display version="2.0.0">
  <name>Temperature Overflow</name>
  <width>120</width>
  <height>25</height>
  <background_color>
    <color red="220" green="220" blue="220">
    </color>
  </background_color>
  <actions>
  </actions>
  <widget type="label" version="2.0.0">
    <name>Steerer name</name>
    <text>TT${INDEX}</text>
    <width>60</width>
    <font>
      <font family="Source Sans Pro" style="REGULAR" size="14.0">
      </font>
    </font>
    <horizontal_alignment>2</horizontal_alignment>
    <vertical_alignment>1</vertical_alignment>
  </widget>
  <widget type="thumbwheel" version="2.0.0">
    <name>Steerer Wheel</name>
    <pv_name>${PREFIX}:BMD-C${STEERE_POS}-${INDEX}:CurSet</pv_name>
    <decimal_digits>2</decimal_digits>
    <integer_digits>3</integer_digits>
    <x>100</x>
    <width>210</width>
    <height>32</height>
    <visible>false</visible>
    <font>
      <font family="Source Sans Pro" size="12.0" style="REGULAR">
      </font>
    </font>
    <rules>
      <rule name="Slider-Wheel" out_exp="false" prop_id="visible">
        <exp bool_exp="pv0 == 1">
          <value>true</value>
        </exp>
        <pv_name>loc://slider</pv_name>
      </rule>
    </rules>
  </widget>
  <widget type="label" version="2.0.0">
    <name>Label</name>
    <text>Normal</text>
    <x>60</x>
    <width>60</width>
    <font>
      <font family="Source Sans Pro" style="BOLD" size="14.0">
      </font>
    </font>
    <horizontal_alignment>1</horizontal_alignment>
    <vertical_alignment>1</vertical_alignment>
    <rules>
      <rule name="Flux color" prop_id="background_color" out_exp="false">
        <exp bool_exp="pv0 &gt;= pv1 || pv0 &lt;= pv4">
          <value>
            <color name="ERROR" red="252" green="13" blue="27">
            </color>
          </value>
        </exp>
        <exp bool_exp="pv0 &gt;= pv2 || pv0 &lt;= pv3">
          <value>
            <color name="WARNING" red="252" green="242" blue="17">
            </color>
          </value>
        </exp>
        <pv_name>${PREFIX}:WtrC-TT-${INDEX}:AITmp</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-HiHiLim-RB</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-HiLim-RB</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-LoLim-RB</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-LoLoLim-RB</pv_name>
      </rule>
      <rule name="Flux info" prop_id="text" out_exp="false">
        <exp bool_exp="pv0 &gt;= pv1 || pv0 &lt;= pv4">
          <value>ERROR</value>
        </exp>
        <exp bool_exp="pv0 &gt;= pv2 || pv0 &lt;= pv3">
          <value>WARNING</value>
        </exp>
        <pv_name>${PREFIX}:WtrC-TT-${INDEX}:AITmp</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-HiHiLim-RB</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-HiLim-RB</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-LoLim-RB</pv_name>
        <pv_name trigger="false">${PREFIX}:WtrC-TT-${INDEX}:Ilck-LoLoLim-RB</pv_name>
      </rule>
    </rules>
  </widget>
</display>
